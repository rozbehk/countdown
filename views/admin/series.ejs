<%- include('../partials/header') %>


<div class="wrapper">
  <div class="sidebar">
    <div class="admin-sidebar">
      <div class="admin-sidebar-title"></div>
      <div>
        <h1>Admin Menu</h1>
        <a class="admin-sidebar-link" href="/admin/search">Add</a>
        <a class="admin-sidebar-link" href="/admin/movies">Movies</a>
        <a class="admin-sidebar-link active" href="/admin/series">Series</a>
      </div>
      
    </div>
  </div>
  <div class="admin-body">
    <input type="text" id="search" onkeyup="livesearch()" placeholder="Search for names..">
    <table>
      <tbody>
          <th>poster</th>
            <th>Title</th>
            <th>Next Air Date</th>
            <th>In Production</th>
            
            <% series.forEach(function(serie){ %>
              <tr class="cards" >
                  <td>
                      <img class="poster-admin" src=" https://image.tmdb.org/t/p/w500<%= serie.poster_path%>" alt="">
                  </td>
                  <td class="title"><%= serie.name %></td>                        
                  <td><%= serie.release_date %></td>
                  <td><%= serie.in_production %></td>
                  <td><a class="detail-btn" href="/series/<%= serie._id %>">DETAILS</a></td>
                  <td>
                    <form action="/series/<%= serie._id %>" method="POST">
                    <button class="update-btn">Update</button>
                  </form>
                  </td>
           
                <td>
                  <form action="/admin/<%= serie._id %>?_method=DELETE" method="POST" name="serie">
                    <input type="hidden" name="type" value="serie">
                    <button class="delete-btn">X</button>
                </form>
                </td>
          
            </tr>
                <%})%>
      
          </tbody>
      </table>
  </div>

</div>







    <%- include('../partials/footer') %>