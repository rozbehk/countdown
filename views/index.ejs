<%- include('./partials/header') %>
<div class="banner"><img src="/images/banner2.jpg" alt=""></div>
<div>
 
  <div class="grid-container">
    <% movies.forEach(function(movie){ %>
      <div class="grid-item">
        <div>
          <a  href="/movies/<%= movie._id %>"><img class="poster-small" src="https://image.tmdb.org/t/p/w500<%=movie.poster_path%>" alt=""></a>
        </div>
        <div>
          <div><%= movie.title %></div>
          <div><%= movie.details %></div>
          <div class="countdown" id="<%= movie.release_date %>">
            <h2 id="countdown"></h1>
            <h2 id="newcountdown"></h2>
          </div>
        </div>
      </div>
    <%})%>
  </div>
</div>
  <div>
    <div class="grid-container">
        <% series.forEach(function(serie ){ %>
        <div class="cards grid-item">
            <div>
                <a  href="/series/<%= serie._id %>"><img class="poster-small" src="https://image.tmdb.org/t/p/w500<%=serie.poster_path%>" alt=""></a>
                
            </div>
            <div>
                <div class="title-small"><%= serie.name %></div>
                <div>counter</div>
                <div></div>
            </div>
        </div>
        <%})%>
    </div>
  </div>





<%- include('./partials/footer') %>
