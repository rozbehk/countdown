<%- include('../partials/header') %>
    <h1>Series List</h1>
    <table>
        <thead>
            <tr>

            </tr>
        </thead>
        <tbody>
            <th>Title</th>
            <th>Genre</th>
            <th>overview</th>
            <th>poster</th>
            <th>Firt Air Date</th>
            <th># episodes</th>
            <th># season</th>
            <th>Details</th>
            <% series.forEach(function(serie ){ %>
                <tr>
                    <td>
                        <%= serie.name %>
                    </td>
                    <td>
                        <% serie.genres.forEach(function(genre){ %>
                            <%=genre.name %>
                                <% }) %>
                    </td>
                    <td>
                        <%= serie.overview %>
                    </td>
                    <td>
                        <img class="poster" src=" <%=serie.poster_path%>" alt="">

                    </td>
                    <td>
                        <%= serie.first_air_date %>
                    </td>
                    <td>
                        <%= serie.number_of_episodes %>
                    </td>
                    <td>
                        <%= serie.number_of_seasons %>
                            </td>
                            <td>
                                <a href="/series/<%= serie._id %>">DETAILS</a>
                    </td>

                </tr>
                <%})%>

        </tbody>
    </table>
    <%- include('../partials/footer') %>