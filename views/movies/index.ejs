<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <title>Mongoose Movies</title>
</head>

<body>
    <h1>Movie List</h1>
    <table>
        <thead>
            <tr>

            </tr>
        </thead>
        <tbody>
            <th>Title</th>
            <th>Genre</th>
            <th>overview</th>
            <th>poster</th>
            <th>release_date</th>
            <th>video</th>
            <th>vote</th>
            <th>Status</th>
            <% movies.forEach(function(m){ %>
                <tr>
                    <td>
                        <%= m.title %>
                    </td>
                    <td>

                        <% m.genres.forEach(function(genre){ %>
                            <%=genre.name %>
                                <% }) %>
                    </td>
                    <td>
                        <%= m.overview %>
                    </td>
                    <td>
                        <img class="poster" src=" <%= m.poster_path%>" alt="">

                    </td>
                    <td>
                        <%= m.release_date %>
                    </td>
                    <td>
                        <%= m.video %>
                    </td>
                    <td>
                        <%= m.vote %>
                    </td>
                    <td>
                        <%= m.status %>
                    </td>

                </tr>
                <%})%>
                    <!-- Close the forEach using EJS here -->
        </tbody>
    </table>
</body>

</html>